// learn more about it in the docs: https://pris.ly/d/prisma-schema
model User{
    id  Int @id @default(autoincrement())
    email String @unique
    password String
    ledgers Ledger[]
}

model Ledger {
    id        Int      @id @default(autoincrement())
    title   String
    note String
    amount Int
    isIncrease Boolean
    time DateTime
    user    User? @relation(fields: [userId], references: [id])
    userId  Int? 
}